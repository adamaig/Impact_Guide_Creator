<%if !current_user%>
<%= notSignedIn %>
<%else%>
<div class = "container" id= "pdf">
	<div class="row">
		<div class = "fist line">
			<%=@category %> | <%= @themeName %>
		</div>
	</div>

	<div class="row">
		<div class = "gameName">
			<%= @gameTitle %>: IMPACT GUIDE
		</div>
	</div>
	<div class="row">
		<div class = "ageTime">
			<%= @age %> | <%= @time %>
		</div>
	</div>

	<div class="row">
		<div class = " col-md-9">
			<div class = "quote">
				<%= @quote %> <br> -<%= @source %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class = "aboutGame">
		<strong>	ABOUT <%= @gameTitle %> </strong><br><%= @about %>
		</div>
	</div>

	<div class="row">
		<div class = "aboutTheme">
			<strong> THEME FOR THIS GUIDE: <%= @themeName %></strong><br><%= @themeAbout%>
		</div>
	</div>
	<div class= "row promptSection">
		<div class= "col-md-3">
			Why use this guide
		</div>
		
		<div class = "pormpts col-md-9">
			<%= @whyUse %>
			</div>

	</div>

	<div class= "row promptSection">
		<div class= "col-md-3">
			Game Basics
		</div>
		
		<div class = "pormpts col-md-9">
			<ul>
			<%@basicPrompts.each do |prompt|%>
				
				<li><%= prompt[0] %> [+<%=prompt[1]%>] </li>
			<%end%>
			</ul>

			</div>

	</div>
	<div class= "row promptSection">
		<div class= "col-md-3">
			Theme Insights
		</div>
		
		<div class = "pormpts col-md-9">
			<ul>
			<% @themePrompts.each do |prompt| %>
				
				<li><%= prompt[0] %> [+<%=prompt[1]%>] </li>
			<%end%>
			</ul>

			</div>

	</div>
		<div class= "row ">
		<div class= "col-md-3">
			World Connections
		</div>
		
		<div class = "pormpts col-md-9">
			<ul>
			<%@worldPrompts.each do |prompt| %>
				
				<li><%= prompt[0] %> [+<%=prompt[1]%>] </li>
			<%end%>
			</ul>

			</div>

	</div>

	 <button value = "click to save pdf" id= "save"/>
			
			


















</div>
<%end%>
   